<resources>
    <style name="base">
    </style>

    <style name="base_fill" parent="base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="base_fill_wrap" parent="base">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_wrap" parent="base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="base_wrap_fill" parent="base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="vertical_fill" parent="base_fill">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="horizontal_fill" parent="base_fill">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="view_flipper" parent="base_fill">
        <item name="android:background">#4079AA</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="busy">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>